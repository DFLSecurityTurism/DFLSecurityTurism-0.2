@model List<DFLSecurityTurism_0._2.Models.Restaurante>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1 class="text-uppercase">
        Restaurantes
    </h1>
</div>

<div class="row">
    @{
        if (Model != null & Model.Count > 0)
        {

            foreach (var restaurante in Model)
            {
                <div class="col-md-6">
                    <h1>@restaurante.Nome </h1>
                    <img src="~/imagensR/@restaurante.Imagem" alt="" style=" width:500px; height:350px" />
                    <p>@restaurante.Descrição1 </p>
                    <p>@restaurante.Descrição2 </p>
                    <p>@restaurante.Descrição3 </p>
                    <p>@restaurante.Descrição4 </p>
                </div>
            }
        }
        else
        {
            <div style="text-align:center">
                <p>Nenhum hotel registado.</p>
            </div>
        }
    }
</div>
