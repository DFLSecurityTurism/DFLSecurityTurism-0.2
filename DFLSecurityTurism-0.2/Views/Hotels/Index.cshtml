@model  List<DFLSecurityTurism_0._2.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="text-uppercase">
        Hotéis
    </h1>
</div>

<div class="row">
    @{
        if (Model != null & Model.Count > 0)
        {

            foreach (var hotel in Model)
            {
                <div class="col-md-6">
                    <h1>@hotel.Nome </h1>
                    <img src="~/@hotel.Imagem" alt="" style=" width:300px; height:350px" />
                    <p>@hotel.Descrição </p>
                </div>
            }
        }
        else
        {
            <div style="text-align:center">
                <p>Nenhum hotel registado.</p>
            </div>
        }
    }
</div>
<div style="text-align:center">
    <a class="btn btn-primary">Carregar Mais</a>
</div>


