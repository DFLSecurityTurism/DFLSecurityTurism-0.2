@model DFLSecurityTurism_0._2.ViewModels.InquéritoViewModel

@{
    ViewData["Title"] = "New";
}

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Responder inquérito </h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="New">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TipoDeEstabelecimento" class="control-label"></label>
                            <select asp-for="TipoDeEstabelecimento" class="form-control">
                                <option value="">Selecione o tipo de estabelecimento</option>
                                <option value="Hotel">Hotel</option>
                                <option value="Restaurante">Restaurante</option>
                            </select>
                            <span asp-validation-for="TipoDeEstabelecimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QuantosCertificadosDeSegurançaTem" class="control-label"></label>
                            <input asp-for="QuantosCertificadosDeSegurançaTem" class="form-control" />
                            <span asp-validation-for="QuantosCertificadosDeSegurançaTem" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QuaisSão" class="control-label"></label>
                            <input asp-for="QuaisSão" class="form-control" />
                            <span asp-validation-for="QuaisSão" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QueMecanismosDeSegurançaOEstabelecimentoUtiliza" class="control-label"></label>
                            <input asp-for="QueMecanismosDeSegurançaOEstabelecimentoUtiliza" class="form-control" />
                            <span asp-validation-for="QueMecanismosDeSegurançaOEstabelecimentoUtiliza" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QuantosEquipamentosDeSegurançaOEstabelecimentoUtiliza" class="control-label"></label>
                            <input asp-for="QuantosEquipamentosDeSegurançaOEstabelecimentoUtiliza" class="form-control" />
                            <span asp-validation-for="QuantosEquipamentosDeSegurançaOEstabelecimentoUtiliza" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QuaisSãoOsEquipamentosDeSegurançaQueTem" class="control-label"></label>
                            <input asp-for="QuaisSãoOsEquipamentosDeSegurançaQueTem" class="form-control" />
                            <span asp-validation-for="QuaisSãoOsEquipamentosDeSegurançaQueTem" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Imagem" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="Imagem" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Escolha uma imagem</label>
                            </div>
                            <span asp-validation-for="Imagem" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i>Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
